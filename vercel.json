{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/admin(.*)",
      "dest": "app.js"
    },
    {
      "src": "/article/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/category/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/messages",
      "dest": "app.js"
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}